@page "{id:guid}"
@model FreelancerHub.UI.Pages.Freelancers.EditModel
@{
    ViewData["Title"] = "Edit Freelancer";
}

<form method="post">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Update Job Directory</h1>
        <hr/>
        <input hidden asp-for="Id"/>
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Username" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Username" class="form-control"/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Email" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>            
            <div class="col-2">
                <label asp-for="PhoneNumber" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>            
            <div class="col-2">
                <label asp-for="Skills" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="SkillsText" class="form-control"></textarea>
                <span asp-validation-for="Skills" class="text-danger"></span>
            </div>            
            <div class="col-2">
                <label asp-for="Hobbies" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="HobbiesText" class="form-control"></textarea>
                <span asp-validation-for="Hobbies" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <a asp-page="/Freelancers/Index" class="btn-primary btn form-control">Back to List</a>
            </div>            
            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-success form-control"/>
            </div>
        </div>
    </div>
</form>
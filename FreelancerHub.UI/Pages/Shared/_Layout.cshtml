<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - FreelancerHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
        <a class="navbar-brand" href="/">FreelancerHub</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" href="/Freelancers/Index">Freelancers</a></li>
            </ul>
            <ul class="navbar-nav">
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <li class="nav-item">
                        <form asp-page="/Logout" method="get" class="form-inline">
                            <button class="btn btn-danger">Logout</button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item"><a class="nav-link" href="/Login">Login</a></li>
                }
            </ul>
        </div>
    </div>
</nav>
<div class="container">
    @RenderBody()
</div>
</body>
</html>